<p id="notice"><%= notice %></p>

<p>
  <h2><%= @user.username %></h2>
     <% if @user.ratings.empty? %>
    	 no ratings yet.
	   <% else %>
	 	   Has made <%= @user.ratings.count %> <%= "rating".pluralize(@user.ratings.count) %>, average <%= @user.average_rating %>
     <% end %>
     <br>
     <br>
     <% if @user.memberships.empty? %>
       not member of any beer club.
      <% else %>
        Member of <% @user.memberships.each do |membership| %> <%= link_to membership.beer_club.name, membership.beer_club %>
      <% end %>
      <% end %>

</p>
<h3>ratings</h3>  
<ul>
    <% @user.ratings.each do |rating| %>
      <li> 
        <%= rating %> 
        <% if @user == current_user %>
            <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %> 
        <% end %>
      </li>
    <% end %>
  </ul>
<br>
<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', current_user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
